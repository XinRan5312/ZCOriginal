<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <include layout="@layout/title_bar" />

    <com.minjinsuo.zhongchou.view.BufferScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/title_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/text_s16"
                        android:text="--"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/status_loan"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:background="@drawable/shap_green_radussmall"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="众筹中"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView style="@style/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s14"
                        android:text="订单总额："
                        android:textColor="@color/black_323232" />

                    <TextView
                        android:id="@+id/totalPrice"
                        style="@style/text_s16"
                        android:textColor="#FF4E4E"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s12"
                        android:text="支持金额："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/supportAmt"
                        style="@style/text_s12"
                        android:text="￥0"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_feeYun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s12"
                        android:text="配送费用："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/feeYun"
                        style="@style/text_s12"
                        android:text="￥0"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_youhuiAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_s12"
                        android:text="优惠金额："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/tv_youhuiAmt"
                        style="@style/text_s12"
                        android:text="￥8"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_persentStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_s12"
                        android:text="预计所占股比："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/tv_persentStock"
                        style="@style/text_s12"
                        android:text="8%"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s12"
                        android:text="订单编号："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/orderNo"
                        style="@style/text_s12"
                        android:text="--"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s12"
                        android:text="交易状态："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/status_order"
                        style="@style/text_s12"
                        android:text="--"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_biezhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_s12"
                        android:text="备注信息："
                        android:textColor="@color/gray_969696" />

                    <TextView
                        android:id="@+id/beizhu"
                        style="@style/text_s12"
                        android:text="--"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>
            </LinearLayout>
            <!-- END 顶部订单信息 -->

            <LinearLayout
                android:id="@+id/layout_recv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        style="@style/text_s16"
                        android:text="回报内容"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView style="@style/view_line" />

                <TextView
                    android:id="@+id/content_rec"
                    style="@style/text_s14"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="false"
                    android:text="非常感谢您的支持！"
                    android:textColor="@color/black_323232" />
                <!-- 可以存放多张图片 -->

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/ll_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/test_order" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/test_order" />
                </LinearLayout>
            </LinearLayout>
            <!-- 结束回报内容 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        style="@style/text_s16"
                        android:text="收货人信息"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView style="@style/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/test_map" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/text_s12"
                                    android:text="收  货  人："
                                    android:textColor="@color/gray_969696" />

                                <TextView
                                    android:id="@+id/recv_name"
                                    style="@style/text_s12"
                                    android:text="--"
                                    android:textColor="@color/gray_969696" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/text_s12"
                                    android:text="联系电话："
                                    android:textColor="@color/gray_969696" />

                                <TextView
                                    android:id="@+id/recv_phone"
                                    style="@style/text_s12"
                                    android:text="--"
                                    android:textColor="@color/gray_969696" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/recv_add"
                                    style="@style/text_s12"
                                    android:singleLine="false"
                                    android:text="收货地址：--"
                                    android:textColor="@color/gray_969696" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- END 收货人信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        style="@style/text_s16"
                        android:text="项目发起者"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView style="@style/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:id="@+id/iv_faqi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/head" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/name_faqi"
                            style="@style/text_s14"
                            android:text="项目发起人：泛海投资"
                            android:textColor="@color/black_323232" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/btn_sendForHim"
                                android:layout_width="70dp"
                                android:layout_height="26dp"
                                android:background="@drawable/selector_gray_strokbtn"
                                android:text="留言"
                                android:textColor="@color/gray_969696"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/btn_callHim"
                                android:layout_width="70dp"
                                android:layout_height="26dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/selector_red_strokbtn"
                                android:text="电话联系"
                                android:textColor="#FC646A"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- END 项目发起者 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="7dp" >

                <TextView
                    style="@style/text_s16"
                    android:drawableLeft="@drawable/order_beizhu"
                    android:drawablePadding="9dp"
                    android:text="风险提示"
                    android:textColor="@color/black_323232" />

                <ImageView
                    style="@style/view_line"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/tv_content_expand"
                    style="@style/text_s14"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:text="1. 众筹并非商品交易，项目存在一定风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目风险，如项目筹款成功但发放回报出现问题，您可申请退款退回支持金额（一次性支付，按项目组织者约定比例以首 笔款+尾款方式付至项目组织者账户）中的尾款部分，而首笔款部分由于已被项目组织者使用"
                    android:textColor="#555555" />

                <ImageView style="@style/view_line" />

                <LinearLayout
                    android:id="@+id/ll_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_arrowdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down_gray" />

                    <TextView
                        android:id="@+id/tv_expand"
                        style="@style/text_s16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="9dp"
                        android:text="展开"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>
            </LinearLayout>
            <!-- END　风险提示 -->
        </LinearLayout>
    </com.minjinsuo.zhongchou.view.BufferScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="4dp" >

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gray_strokbtn"
            android:text="取消订单"
            android:textColor="#333333"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>