<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shaperect_strock_black"
        android:orientation="vertical"
        android:padding="7dp" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_faild" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv_normal_black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="充电式剃须刀"
            android:textColor="#323232"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                style="@style/tv_normal_black"
                android:text="积分"
                android:textColor="#323232"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_integrateCount"
                style="@style/tv_normal_black"
                android:layout_marginLeft="8dp"
                android:text="2000"
                android:textColor="#FC646A" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/home_btn_red_selector"
            android:text="兑换"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>