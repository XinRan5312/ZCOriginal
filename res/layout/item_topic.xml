<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <com.minjinsuo.zhongchou.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_s14"
            android:text="投资者"
            android:textColor="@color/black_323232" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/text_s14"
            android:layout_marginTop="10dp"
            android:text="您好，买了一个，众筹撑了还要等结束才能发货吗？具体什么时候可以收获呢？"
            android:textColor="@color/black_323232"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_replay"
                style="@style/text_s12"
                android:text="2条回复"
                android:textColor="@color/gray_969696" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_s12"
                android:text="|25分钟前"
                android:textColor="@color/gray_969696" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>