<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <com.minjinsuo.zhongchou.view.BufferScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@color/bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/invest_area"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="常住城市："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hasChoiceArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_comType"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="公司类型："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_comType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp" >

                <TextView
                    style="@style/text_s14"
                    android:text="公司名称："
                    android:textColor="@color/black_323232" />

                <com.minjinsuo.zhongchou.widget.ClearableEditText
                    android:id="@+id/et_comName"
                    style="@style/text_s14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请输入"
                    android:maxLength="30"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />
            <!-- END 公司名称 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp" >

                <TextView
                    style="@style/text_s14"
                    android:text="职位/头衔："
                    android:textColor="@color/black_323232" />

                <com.minjinsuo.zhongchou.widget.ClearableEditText
                    android:id="@+id/et_zhiwei"
                    style="@style/text_s14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请输入"
                    android:maxLength="30"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_edu"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="教育背景："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_edu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />
            <!-- END 教育背景 -->

            <LinearLayout
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="工作经历："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <com.minjinsuo.zhongchou.widget.ClearableEditText
                    android:id="@+id/et_workExp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_preference"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="阶段偏好："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_time"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="从事投资实业时间："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_hadPrjNum"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="已投项目数："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_prjNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />
            <!-- END 已投项目数 -->

            <LinearLayout
                android:id="@+id/ll_prjName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:visibility="gone" >

                <TextView
                    style="@style/text_s14"
                    android:text="已投项目名称："
                    android:textColor="@color/black_323232" />

                <com.minjinsuo.zhongchou.widget.ClearableEditText
                    android:id="@+id/et_hadInvestPrjName"
                    style="@style/text_s14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请输入"
                    android:maxLength="30"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:id="@+id/line_prjName"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_nextRond"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="项目已到下轮："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nextPrj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_succExit"
                style="@style/LinearLayout_Item"
                android:padding="16dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="成功退出项目："
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_exitPrj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="center_vertical"
                    android:text="请选择"
                    android:textColor="@color/black_323232"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#66666666" />

            <LinearLayout
                android:id="@+id/ll_ifShow_successPrj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="16dp" >

                    <TextView
                        style="@style/text_s14"
                        android:text="成功案例名称："
                        android:textColor="@color/black_323232" />

                    <com.minjinsuo.zhongchou.widget.ClearableEditText
                        android:id="@+id/et_succePrjName"
                        style="@style/text_s14"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:hint="请输入"
                        android:maxLength="30"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#66666666" />
                <!-- END 成功案例名称 -->

                <LinearLayout
                    style="@style/LinearLayout_Item"
                    android:padding="16dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="成功案例介绍："
                        android:textColor="@color/black_323232"
                        android:textSize="14sp" />

                    <com.minjinsuo.zhongchou.widget.ClearableEditText
                        android:id="@+id/et_succPrjIntro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:hint="请输入"
                        android:padding="10dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.minjinsuo.zhongchou.view.BufferScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_ok"
            style="@style/Btn_Long"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="确认" />
    </LinearLayout>

</LinearLayout>