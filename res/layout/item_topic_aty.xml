<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.minjinsuo.zhongchou.view.CircleImageView
            android:id="@+id/head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_s16"
            android:layout_marginLeft="9dp"
            android:text="投资者"
            android:textColor="@color/black_323232" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_s16"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="您好，买了一个，众筹成功了还要等结束才能发货吗？具体什么时候可以收货？"
        android:textColor="@color/black_323232"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_s12"
            android:drawableLeft="@drawable/topic_clock"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:text="25分钟之前"
            android:textColor="@color/gray_969696" />

        <TextView
            style="@style/text_s12"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/gray_969696" />

        <TextView
            android:id="@+id/id_repayCnt"
            style="@style/text_s12"
            android:drawableLeft="@drawable/topic_pinglun"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:text="评论"
            android:textColor="@color/gray_969696" />
    </LinearLayout>

</LinearLayout>