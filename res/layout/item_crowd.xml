<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_layout"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="218dp" >

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_status"
            style="@style/text_s12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shap_red_radussmall"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="预热中"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_s14"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="快颐坊晋味餐厅"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_des"
                style="@style/text_s14"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="筹款中 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_s14"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_des"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/amount"
                        style="@style/text_s14"
                        android:text="100000.00"
                        android:textColor="@color/red" />

                    <TextView
                        style="@style/text_s12"
                        android:text="目标金额"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/supp_num"
                        style="@style/text_s14"
                        android:text="7000"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:text="已支持金额"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ready_value"
                        style="@style/text_s14"
                        android:text="20%"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:text="出让股份"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/leftday"
                        style="@style/text_s14"
                        android:text="10天"
                        android:textColor="@color/black_323232" />

                    <TextView
                        style="@style/text_s12"
                        android:text="剩余天数"
                        android:textColor="@color/gray_969696" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/horizontal_pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/progressbar" />

            <TextView
                android:id="@+id/tv_progress"
                style="@style/text_s12"
                android:text="30%"
                android:textColor="@color/gray_969696" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>