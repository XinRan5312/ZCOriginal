<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/head_investor_default" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_s16"
                android:drawablePadding="10dp"
                android:text="赵晓"
                android:textColor="#595968" />

            <ImageView
                android:id="@+id/iv_ifLingTouRen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:src="@drawable/lingtouren"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/zhichi"
            style="@style/text_s14"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="10dp"
            android:text="支持金额："
            android:textColor="@color/black_323232" />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/text_s14"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/zhichi"
            android:text="2元"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_supportCnt"
            style="@style/text_s14"
            android:layout_below="@+id/ll_top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_amount"
            android:text="×1"
            android:textColor="@color/black_323232" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_s12"
            android:layout_below="@+id/tv_amount"
            android:layout_marginTop="5dp"
            android:text="2016-06-09 11:28:34"
            android:textColor="@color/gray_969696" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:visibility="gone"
            android:paddingTop="11dp"
            android:text="申请领头"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>