<?xml version="1.0" encoding="utf-8"?>
<!-- 投资认证页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <com.minjinsuo.zhongchou.view.BufferScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/invest_certicify_n" />

                <TextView
                    style="@style/text_s12"
                    android:layout_marginTop="17dp"
                    android:text="普通投资人认证"
                    android:textColor="#00A4EF" />

                <Button
                    android:id="@+id/btn_certicify_top"
                    style="@style/Btn_Long"
                    android:layout_width="177dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="17dp"
                    android:text="开始认证" />
            </LinearLayout>
            <!-- END topView -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/invest_certicify_ling_y" />

                <TextView
                    android:id="@+id/tv_lintou_tip"
                    style="@style/text_s12"
                    android:layout_marginTop="17dp"
                    android:text="普通投资人认证过后才可进行平台领投人认证"
                    android:textColor="#00A4EF" />

                <Button
                    android:id="@+id/btn_certicify_bottom"
                    android:layout_width="177dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/shap_btn_gray"
                    android:gravity="center"
                    android:text="开始认证"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </com.minjinsuo.zhongchou.view.BufferScrollView>

</LinearLayout>