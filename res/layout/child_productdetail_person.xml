<?xml version="1.0" encoding="utf-8"?>
<!-- 产品详情的子布局——支持人员 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_supportPerson"
        style="@style/LinearLayout_Item"
        android:padding="16dp" >

        <TextView
            android:id="@+id/tv_investor_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/product_detail_person"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="支持人员"
            android:textColor="@color/black_323232"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_title"
            style="@style/text_s12"
            android:layout_width="wrap_content"
            android:text="（0）"
            android:textColor="@color/gray_969696" />

        <TextView
            android:id="@+id/right_investor_arrow"
            style="@style/text_s14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="right"
            android:textColor="@color/gray_969696" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hs_scroll_investor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_contains_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>